<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.ivan.homework1"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splash_screen.WelcomeActivity"
            android:noHistory="true"
            android:theme="@style/NoActionBarStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".list_screen.ViewActivity"/>
        <activity android:name=".list_screen.ScreenSlidePagerActivity"/>
        <activity android:name=".main_activity.MainActivity">
        </activity>
    </application>

</manifest>
